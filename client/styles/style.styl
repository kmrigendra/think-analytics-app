@import '_normalize.styl'
@import '_typography.styl'
@import 'react-select.styl'


body
  background offwhite

.site-header
  min-height: 79px;
  max-height: 79px;
  background-color: #333333;
  position: fixed;
  width: 100%;
  top: 0;
  z-index: 9999;
  .header-container
    padding: 15px;
    height: 100%;
    max-width: 1200px;
    width: 90%;
    margin: 0 auto;
    .logo
      display: inline-block;
      width: 30%;
      height: 90%;
      min-width: 155px;
      max-width: 155px;
      padding: 10px;
      a 
        text-decoration: none;
        img
          width: 170px;

.content-holder
  margin-top: 79px !important;
.photo-grid
  display flex
  flex-wrap wrap
  max-width 1200px
  margin 79px auto 0 auto

.grid-figure
  flex-basis calc(33.333% - 4rem)
  flex-grow 1
  flex-shrink 0
  margin 0 2rem 2rem 2rem
  padding 2rem
  border 1px solid lightgray
  background white
  box-shadow 0 0 0 5px rgba(0,0,0,0.03);
  position relative

.single-photo
  @extend .grid-figure
  max-width 900px
  margin 90px auto 0 auto
  display flex
  background white
  .grid-figure
    box-shadow none
    margin 0 3% 0 0
    border 0
    padding 0
    flex 1 0 34%
    max-width 34%
  .pretty-form
    flex 1 0 63%
    max-width 63%
    margin 0 0 0 0
  .grid-photo
    width 100%
    margin 0

.grid-photo
  width calc(100% + 2rem)
  margin-left -2rem
  margin-top -2rem
  max-width none

.pretty-form
  padding 0.5rem 0
  p
    font-size 1.2rem
    margin 0
  strong
    color blue
    margin-right 5px
    
 
.form 
  input, textarea
    width 100%
    border 0
    font-size 1.3rem
    padding 1rem 0
    border-bottom 1px solid lightgrey
    outline none
    resize vertical


.grid-photo-wrap
  position relative

/*  
  Buttons  
*/

.control-buttons
  display flex
  justify-content space-between
    
button, .button
  border 2px solid lighten(grey, 90%)
  background none
  flex-basis 48%
  display inline-block
  line-height 2
  text-decoration none
  padding 5px
  text-align center
  font-size 15px
  color blue
  transition all 0.2s
  box-sizing padding-box
  &:hover, &:focus
    border-color blue
    outline 0

.slick-prev 
  left 25px
  position absolute
  z-index 1

.slick-next 
    right 25px
    position absolute
    z-index 1